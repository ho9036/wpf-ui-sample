<Application
    x:Class="WPF.Sample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="clr-namespace:WPF.Sample.Converters"
    xmlns:local="clr-namespace:WPF.Sample"
    DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ColorResource.xaml" />
                <ResourceDictionary Source="Resources/FontResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <cv:HexColorCodeToSolidColorBrushConverter x:Key="HexColorCodeToSolidColorBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
